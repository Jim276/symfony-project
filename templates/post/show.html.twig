{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<h1>Post</h1>
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ post.slug }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ post.content }}</td>
        </tr>
</table>
<a href="{{ path('post_index') }}">Back to list</a>
{% endblock %}